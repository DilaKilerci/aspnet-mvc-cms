@model Cms.Entities.Concrete.Dtos.CategoryDtos.CategoryDto

@{
  Layout = "_AdminLayout";
  ViewBag.Title = "Edit Category";
}

<div class="row">
  <div class="col-xxl-6">
    <div class="card card-xxl-stretch">
      <div class="card-header">
        <h3>Edit Category</h3>
      </div>
      <div class="card-body">
        <form asp-area="admin" asp-controller="Category" asp-action="edit" id="form-category-edit">
          <input type="hidden" asp-for="Id" name="categoryId" />
          <input type="hidden" name="modifiedById" value="1" />
          <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
          <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
          </div>
          <div class="mb-6 form-check">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label">@Html.DisplayNameFor(model => model.IsActive)</label>
          </div>
          <br />
          <a class="btn btn-secondary" asp-area="Admin" asp-controller="Category" asp-action="Index"><span class="fas fa-back"></span> Return</a>
          <button type="submit" class="btn btn-primary" id="btnSave"><span class="fas fa-save"></span> Save
            </button>
        </form>

      </div>
    </div>
  </div>
</div>


}
